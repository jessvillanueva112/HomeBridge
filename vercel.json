{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "FLASK_APP": "app.py",
    "FLASK_ENV": "production",
    "PYTHONPATH": ".",
    "NLTK_DATA": "/tmp/nltk_data"
  },
  "regions": ["iad1"],
  "public": false,
  "ignore": [
    "nltk_data/**",
    "__pycache__/**",
    "*.pyc",
    "*.pyo",
    "*.pyd",
    ".pytest_cache/**",
    ".coverage",
    "htmlcov/**",
    "instance/**",
    "tests/**",
    "docs/**",
    ".venv/**",
    "venv/**"
  ]
} 